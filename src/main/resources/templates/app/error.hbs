{{#partial "contenido"}}
    <div class="h-screen flex flex-col items-center justify-center azulIntermedio text-white p-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-red-400 mb-4" fill="none" viewBox="0 0 24 24"
             stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <h1 class="text-4xl font-bold mb-4">Error</h1>
        {{#if message}}
            <p class="text-xl mb-8 text-center">{{message}}</p>
        {{else}}
            <p class="text-xl mb-8 text-center">Lo sentimos, ha ocurrido un error. Por favor, inténtelo de nuevo más
                tarde.</p>
        {{/if}}
        <a href="/" class="bg-white text-blue-900 py-2 px-4 rounded-full hover:bg-opacity-90 transition duration-300">
            Volver al inicio
        </a>
    </div>
{{/partial}}

