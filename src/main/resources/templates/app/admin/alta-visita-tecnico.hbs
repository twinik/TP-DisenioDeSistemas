{{#partial "contenido"}}
    <div class="p-10 mx-auto max-w-7xl">
        <h1 class="title1 mb-8">Registrar Visita de técnico</h1>

        {{#if message}}
            <p style="background: rgb(255, 163, 163);"
               class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400">{{message}}</p>
        {{/if}}

        <form method="post" action="" class="content-center max-w-md mx-auto">
            <label
                    for="tecnicoId"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Técnico</label
            >
            <select
                    name="tecnico"
                    id="tecnicoId"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    required
            >
                {{#each tecnicos}}
                    <option value={{this.id}}>{{this.nombre}}</option>
                {{/each}}

            </select>

            <label
                    for="datetime-picker"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Fecha y hora de visita</label>

            <input
                    required
                    name="fecha"
                    id="datetime-picker"
                    type="datetime-local"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            />


            <label
                    for="descripcion-visita"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Descripción de la visita</label
            >
            <input
                    type="text"
                    id="descripcion-visita"
                    name="desc"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Descripción"
                    required
            />

            <label for="imagen" class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Imagen de la visita (opcional)
            </label>
            <div class="mb-5">
                <label for="dropzone-file"
                       class="flex flex-col items-center w-full max-w-lg p-5 mx-auto mt-2 text-center bg-white border-2 border-gray-300 border-dashed cursor-pointer dark:bg-gray-900 dark:border-gray-700 rounded-xl">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-8 h-8 text-gray-500 dark:text-gray-400">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M12 16.5V9.75m0 0l3 3m-3-3l-3 3M6.75 19.5a4.5 4.5 0 01-1.41-8.775 5.25 5.25 0 0110.233-2.33 3 3 0 013.758 3.848A3.752 3.752 0 0118 19.5H6.75z"/>
                    </svg>
                    <h2 class="mt-1 font-medium tracking-wide text-gray-700 dark:text-gray-200">
                        Subir archivo
                    </h2>
                    <input id="dropzone-file" type="file" name="file" class="hidden" accept="image/*"/>
                </label>
                <div id="image-preview" class="mt-4 hidden">
                    <img id="preview" src="#" alt="Vista previa de la imagen"
                         class="max-w-full h-auto rounded-lg shadow-lg"/>
                </div>
            </div>

            <label
                    for="incidente-id"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Incidente</label
            >
            <select
                    name="incidente"
                    id="incidente-id"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    required
            >
                {{#each incidentes}}
                    <option value={{this.id}}>{{this.tipo}} en {{this.nombreHeladera}}  del día  {{this.fecha}} a
                        las {{this.hora}}</option>
                {{/each}}

            </select>


            <label class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                ¿Incidente solucionado?
            </label>
            <div class="mb-5">
                <label for="incidente-solucionado-si" class="flex items-center mb-2">
                    <input
                            type="radio"
                            id="incidente-solucionado-si"
                            name="incidenteSolucionado"
                            value="Sí"
                            class="bg-gray-50 border border-gray-300 text-blue-600 focus:ring-blue-500 focus:border-blue-500 rounded dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            required
                    >
                    <span class="ml-2 text-sm text-gray-900 dark:text-white">Sí</span>
                </label>

                <label for="incidente-solucionado-no" class="flex items-center">
                    <input
                            type="radio"
                            id="incidente-solucionado-no"
                            name="incidenteSolucionado"
                            value="No"
                            class="bg-gray-50 border border-gray-300 text-blue-600 focus:ring-blue-500 focus:border-blue-500 rounded dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    >
                    <span class="ml-2 text-sm text-gray-900 dark:text-white">No</span>
                </label>
            </div>

            <button
                    type="submit"
                    class="content-center max-w-md mx-auto w-full mt-2 px-6 py-3 text-sm font-medium tracking-wide text-white transition-colors duration-300 transform botonFormularios rounded-lg hover:bg-blue-900 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50 mb-12"
            >
                Agregar visita
            </button>
        </form>
    </div>
{{/partial}}



