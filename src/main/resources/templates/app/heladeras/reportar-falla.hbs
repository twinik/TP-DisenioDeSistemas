{{#partial "contenido"}}
    <div class="p-5 mx-auto max-w-4xl">
        <h1 class="title1">Reportar Falla Tecnica</h1>
        <h2 class="title2 mt-10">Heladera Medrano</h2>
        <form action="/upload-falla-tecnica" method="post" enctype="multipart/form-data">
            <div class="ml-5 mr-5 mt-5 relative z-0 mb-5 group">
                <textarea
                    id="message"
                    rows="4"
                    class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="DescripciÃ³n de la falla encontrada"
                ></textarea>

                <!-- Input Fotografia -->
                <div class="mt-8 mb-8">
                    <label
                        for="dropzone-file"
                        class="flex flex-col items-center w-full max-w-lg p-5 mx-auto mt-2 text-center bg-white border-2 border-gray-300 border-dashed cursor-pointer dark:bg-gray-900 dark:border-gray-700 rounded-xl"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-8 h-8 text-gray-500 dark:text-gray-400"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M12 16.5V9.75m0 0l3 3m-3-3l-3 3M6.75 19.5a4.5 4.5 0 01-1.41-8.775 5.25 5.25 0 0110.233-2.33 3 3 0 013.758 3.848A3.752 3.752 0 0118 19.5H6.75z"
