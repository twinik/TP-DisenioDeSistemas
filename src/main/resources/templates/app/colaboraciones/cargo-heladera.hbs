{{#partial "contenido"}}
    <div class="p-10 mx-auto max-w-7xl">
        <h1 class="title1 mb-8">Colocar heladera</h1>

        <form method="post" action="/colaborar/colocar-heladera" class="content-center max-w-md mx-auto">
            <label
                    for="nombre"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Nombre de la heladera</label
            >
            <input
                    type="text"
                    name="nombre"
                    id="nombre"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Nombre"
                    required
            />

            <label
                    for="modelo"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Modelo</label
            >
            <select
                    name="modelo"
                    id="modelo"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            >
                {{#each modelos}}
                    <option value={{this.id}}>{{this.modelo}}  {{this.rangoTemperaturas}}</option>
                {{/each }}
                <!--                <option value="modelo1">Modelo 1</option>-->
                <!--                <option value="modelo2">Modelo 2</option>-->
                <!--                <option value="modelo3">Modelo 3</option>-->
            </select>

            <label
                    for="capacidad"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Capacidad (en cantidad de viandas)</label
            >
            <input
                    type="number"
                    name="capacidad"
                    id="capacidad"
                    aria-describedby="helper-text-explanation"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Capacidad"
                    required
                    min="1"
            />

            <label
                    for="default-datepicker"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Fecha de puesta en funcionamiento</label
            >
            <input
                    required
                    datepicker
                    datepicker-autohide
                    datepicker-format="dd/mm/yyyy"
                    name="fecha"
                    id="default-datepicker"
                    type="text"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Fecha de puesta en funcionamiento"
            />

            <span
                    class="text-left block mb-3 text-sm font-medium text-gray-900 dark:text-white"
            ><strong>Recomendación de Puntos de Colocacion</strong></span
            >

            <label for="latitud"
                   class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Latitud</label>

            <input
                    type="number"
                    id="latitud"
                    name="latitud"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Latitud"
                    step="0.000000000000001"
                    min="-90"
                    max="90"
            />

            <label for="longitud"
                   class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Longitud</label>

            <input
                    type="number"
                    id="longitud"
                    name="longitud"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Longitud"
                    step="0.000000000000001"
                    min="-180"
                    max="180"
            />


            <label for="radio"
                   class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Cobertura (Km):</label>
            <input
                    type="number"
                    step="0.2"
                    id="radio"
                    name="radio"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="1"
            />

            <div
                    id="map"
                    style="height: 300px; width: 100%; z-index: 50"
                    class="mb-0"
            ></div>
            <div id="mensaje-error" class="mb-5 text-red-500 text-sm" style="display: none;">
                Por favor, completa los campos de latitud, longitud y radio.
            </div>
            <div class="flex space-x-4 my-3">
                <button id="elegir-nuevo-punto"
                        class="w-1/2 mt-2 px-6 py-3 text-sm font-medium tracking-wide text-white transition-colors duration-300 transform botonFormularios rounded-lg hover:bg-blue-900 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                    Elegir nueva referencia
                </button>
                <button id="confirmar" type="button"
                        class="w-1/2 mt-2 px-6 py-3 text-sm font-medium tracking-wide text-white transition-colors duration-300 transform botonFormularios rounded-lg hover:bg-blue-900 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                    Buscar puntos
                </button>

            </div>

            <span
                    class="text-left block mb-3 text-sm font-medium text-gray-900 dark:text-white"
            ><strong>Selección de heladera</strong></span
            >

            <label for="latitudElegida"
                   class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Latitud elegida</label>

            <input
                    type="number"
                    id="latitudElegida"
                    name="latitudElegida"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Latitud de Heladera Elegida"
                    required
                    step="0.000000000000001"
                    min="-90"
                    max="90"
            />

            <label for="longitudElegida"
                   class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Longitud elegida</label>

            <input
                    type="number"
                    id="longitudElegida"
                    name="longitudElegida"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Longitud de Heladera Elegida"
                    step="0.000000000000001"
                    min="-180"
                    max="180"
            />

            <label
                    for="Calle"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Calle</label
            >
            <input
                    type="text"
                    id="calle"
                    name="calle"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Calle"
                    required
            />

            <label
                    for="numero"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Numero</label
            >
            <input
                    type="number"
                    id="numero"
                    name="numero"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Numero"
                    required
            />

            <label
                    for="piso"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Piso (opcional)</label
            >
            <input
                    type="number"
                    id="piso"
                    name="piso"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Piso"
            />

            <label
                    for="codPostal"
                    class="text-left block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Código postal</label
            >
            <input
                    type="text"
                    id="codPostal"
                    name="codPostal"
                    class="mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Código"
                    required
            />

            <div class="mb-6">
                <!-- Título de la sección -->
                <span
                        class="text-left block mb-3 text-sm font-medium text-gray-900 dark:text-white"
                ><strong>Seleccione los sensores a disposición</strong></span
                >
                <!-- Checkbox para sensor de temperatura -->
                <div class="flex items-center mb-4">
                    <input
                            type="checkbox"
                            id="sensor-temperatura"
                            name="sensorTemp"
                            value="temp"
                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                    />
                    <label
                            for="sensor-temperatura"
                            class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300"
                    >Sensor de temperatura</label>
                </div>

                <!-- Checkbox para sensor de movimiento -->
                <div class="flex items-center mb-4">
                    <input
                            type="checkbox"
                            id="sensor-movimiento"
                            name="sensorMov"
                            value="mov"
                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                    />
                    <label
                            for="sensor-movimiento"
                            class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300"
                    >Sensor de movimiento</label>
                </div>
            </div>


            <button
                    type="submit"
                    class="content-center max-w-md mx-auto w-full mt-2 px-6 py-3 text-sm font-medium tracking-wide text-white transition-colors duration-300 transform botonFormularios rounded-lg hover:bg-blue-900 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50 mb-12"
            >
                Registrar donación
            </button>
        </form>
    </div>
{{/partial}}

