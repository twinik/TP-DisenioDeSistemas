{{/partial}}

{{#partial "scripts"}}
    <script
            src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""
    ></script>
    <script src="/js/utils-heladeras.js"></script>
    <script src="/js/heladeras-seleccion.js"></script>
    <script>
        document.getElementById('add-vianda-btn').addEventListener('click', function () {
            const viandasContainer = document.getElementById('viandas-container');
            const viandaCount = viandasContainer.getElementsByClassName('vianda').length;
            const newVianda = viandasContainer.firstElementChild.cloneNode(true);

            newVianda.querySelectorAll('input').forEach(function (input) {
                const newId = input.id.split('-')[0] + '-' + (viandaCount + 1);
                const newName = input.name.split('-')[0] + '-' + (viandaCount + 1);
                input.id = newId;
                input.value = '';
                input.name = newName;
            });

            newVianda.querySelectorAll('label').forEach(function (label) {
                const newFor = label.getAttribute('for').split('-')[0] + '-' + (viandaCount + 1);
                label.setAttribute('for', newFor);
            });

            newVianda.querySelector('strong').textContent = `Vianda ${viandaCount + 1}`;

            viandasContainer.appendChild(newVianda);
            document.getElementById('cantidad-viandas').value = viandaCount + 1;

            newVianda.querySelectorAll('[datepicker]').forEach(function (dateInput) {
                new Datepicker(dateInput, {
                    autohide: true,
                    format: 'dd/mm/yyyy'
                });
            });
        });
    </script>
    <script src="/js/form-handler-donacion.js"></script>
    <script>
        handleFormSubmit('form-vianda', 'enviar-vianda');
    </script>
{{/partial}}

